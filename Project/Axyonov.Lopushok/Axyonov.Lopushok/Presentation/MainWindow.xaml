<Window x:Class="Axyonov.Lopushok.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Axyonov.Lopushok.Presentation"
        xmlns:viewModel="clr-namespace:Axyonov.Lopushok.Presentation.ViewModels"
        mc:Ignorable="d"
        Title="ООО &quot;Лопушок&quot;" MinHeight="450" MinWidth="800"
        Icon="/Resources/Icon.ico"
        Background="{StaticResource ColorPrimary}"
        FontFamily="Gabriola"
        FontSize="20">
    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
            <RowDefinition Height="0"/>
        </Grid.RowDefinitions>
        <Image Source="/Resources/Logo.png"
               Grid.RowSpan="3"
               Opacity="0.3"/>
        <Border Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal"
                            Grid.Column="0">
                    <Image Source="/Resources/Logo.png"
                           Width="40"
                           Height="40"
                           Margin="5"/>
                    <Border CornerRadius="10"
                            Height="40"
                            Width="300"
                            Margin="5"
                            BorderThickness="2"
                            BorderBrush="{StaticResource ColorSecondary}"
                            Name="TextBorder">
                        <TextBox Text="{Binding Search, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 HorizontalContentAlignment="Center"
                                 Margin="8,0,8,0">
                        </TextBox>
                    </Border>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Grid.Column="1"
                            HorizontalAlignment="Right">
                    <ComboBox Height="40"
                              Width="150"
                              Margin="5"
                              ItemsSource="{Binding SorterItemsList}"
                              SelectedItem="{Binding SelectedSorter}">
                    </ComboBox>
                    <ComboBox Height="40"
                              Width="150"
                              Margin="5"
                              ItemsSource="{Binding FiltherItemsList}"
                              SelectedItem="{Binding SelectedFilter}"/>
                </StackPanel>
            </Grid>
        </Border>
        <ListView ItemsSource="{Binding Products}"
                  Grid.Row="1"
                  Background="Transparent"
                  Name="TableList"
                  ScrollViewer.VerticalScrollBarVisibility="Disabled"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Добавить продукт"
                              Command="{Binding OpenAddShelfWindowCommand}"/>
                    <MenuItem Header="Материал">
                        <MenuItem Header="Добавить"
                                  />
                        <MenuItem Header="Создать"/>
                    </MenuItem>
                    <MenuItem Header="Редактировать"/>
                    <MenuItem Header="Удалить"/>
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Border
                                    x:Name="Border"
                                    Margin="5"
                                    Background="Transparent"
                                    BorderBrush="{StaticResource ColorSecondary}"
                                    BorderThickness="2"
                                    CornerRadius="10">
                                    <Grid
                                        Height="120">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="200"/>
                                        </Grid.ColumnDefinitions>
                                        <Image Grid.Column="0"
                                               Source="{Binding Image}"
                                               Margin="10"
                                               Stretch="Uniform"/>
                                        <StackPanel Grid.Column="1"
                                                    Orientation="Vertical">
                                            <TextBlock Text="{Binding FullTitle}"/>
                                            <TextBlock Text="{Binding ArticleNumber}"/>
                                            <TextBlock Text="{Binding FullMaterials, StringFormat=Материалы: {0}}"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding TotalCost}"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,0,10,0"/>
                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource ColorAccent}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </Grid>
</Window>
